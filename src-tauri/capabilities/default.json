{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "opener:default",
        "dialog:allow-open",
        {
            "identifier": "fs:allow-exists",
            "allow": [
                { "path": "**" }
            ]
        },
        {
            "identifier": "fs:allow-read",
            "allow": [
                { "path": "**" }
            ]
        }
    ]
}
